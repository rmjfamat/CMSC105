import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

/*
    Alvarez, Mary Maichaelle
    Famat, Ruffa Mae 
    Feb. 16, 2017
    CMSC 105 - Lab Exercise 1
 */
public class CMSC105LAB1 {
    
    public static void main(String[] args) {
        int population_size;
        int choiceOfFrame;
        int sampleInt;
        String sampleChar;
        List<Object> list = new ArrayList<>();
        
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter population size.");
        population_size = sc.nextInt();
       
        do{
            System.out.println("Press 1 if your sampling frame is numerical\nPress 2 if your sampling frame is character.");
            choiceOfFrame = sc.nextInt();
            
            if(choiceOfFrame == 1){
                System.out.println("Enter your samples.");
                for(int i = 0; i < population_size; i++){
                    sampleInt = sc.nextInt();
                    list.add(sampleInt);
                }
                
            }
            if(choiceOfFrame == 2){
                System.out.println("Enter your samples.");
                for(int i = 0; i < population_size; i++){
                    sampleChar = sc.next();
                    list.add(sampleChar);
                } 
            }
            
            for(int i = 0; i < list.size(); i++){
                System.out.println(i + 1 + "\n" + list.get(i));
            }
        }while (choiceOfFrame != 1 && choiceOfFrame != 2);
            
       // System.out.println("\tBasic Sampling Methods\n1. Simple Random Sampling\n2. Sytematic Sampling\n3. Stratified Sampling\n4. Quit");

    }
    
}
